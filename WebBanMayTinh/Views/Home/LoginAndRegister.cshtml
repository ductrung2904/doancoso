@model WebBanMayTinh.Models.UserModels
@{
    ViewBag.Title = "Đăng nhập & Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="main-page">
        <div class="row">
            <div class="span12">
                <div class="wrapper">
                    @if (TempData["Error"] != null)//kiểm tra thông báo để hiển thị
                    {
                        <div class="alert alert-error alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <h3>Thất bại</h3>
                            @TempData["Error"]
                        </div>
                    }
                    else if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <h3>Thành công</h3>
                            @TempData["Success"]
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="login_page">
            <div class="row">
                <div class="span12">
                    <div class="container" id="container">
                        <div class="form-container sign-up-container">
                            @using (Html.BeginForm("LoginAndRegister", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <h1>Đăng ký tài khoản mới</h1>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success">@ViewBag.Success</div>
                                }
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Tên đăng nhập", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Họ tên", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Số điện thoại", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Địa chỉ", @required = "true" })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <button type="submit">Đăng ký</button>
                            }
                        </div>
                        <div class="form-container sign-in-container">
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                            {
                                <h1>Đăng nhập</h1>
                                <div class="social-container">
                                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                                </div>
                                <span>hoặc sử dụng tài khoản</span>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        <input type="text" name="username" placeholder="Tên đăng nhập" required="true" />
                                    </div>
                                </div>
                                <div class="w-100 position-relative">
                                    <div class="w-100">
                                        <input type="password" name="password" placeholder="Mật khẩu" required="true" />
                                    </div>
                                </div>
                                <a href="#">Quên mật khẩu?</a>
                                <button type="submit">Đăng nhập</button>
                            }
                        </div>
                        <div class="overlay-container">
                            <div class="overlay">
                                <div class="overlay-panel overlay-left">
                                    <h1>Bạn đã có tài khoản?</h1>
                                    <p>Đăng nhập để kết nối với chúng tôi</p>
                                    <button class="ghost" id="signIn">Đăng nhập</button>
                                </div>
                                <div class="overlay-panel overlay-right">
                                    <h1>Bạn là khách hàng mới</h1>
                                    <p>Đăng ký tài khoản và tham gia cùng chúng tôi</p>
                                    <button class="ghost" id="signUp">Đăng ký</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script
{
    <script src="~/Scripts/loginform.js"></script>
}

